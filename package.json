    "express": "^4.18.2",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@aave/core-v3": "^1.19.3",

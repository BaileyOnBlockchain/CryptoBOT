{
  "name": "cryptobot",
  "version": "1.0.0",
  "description": "Flash loan arbitrage bot for crypto trading",
  "main": "bot.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "hardhat run scripts/deploy.js --network base-mainnet",
    "deploy:testnet": "hardhat run scripts/deploy.js --network base-sepolia",
    "deploy:local": "hardhat run scripts/deploy-local.js",
    "deploy:mainnet": "hardhat run scripts/deploy-mainnet.js --network base-mainnet",
    "compile": "hardhat compile",
    "start": "node bot.js",
    "start:enhanced": "node bot-enhanced.js",
    "monitor": "node monitoring/performance-monitor.js",
    "dashboard": "node monitoring/dashboard-server.js",
    "test:alerts": "node -e \"const AlertSystem = require('./monitoring/alert-system'); const alerts = new AlertSystem(); alerts.testEmailConfiguration();\"",
    "emergency:stop": "node emergency-stop.js",
    "emergency:withdraw": "node emergency-withdraw.js",
    "emergency:status": "node emergency-status.js",
    "emergency:manual": "node manual-emergency.js"
  },
  "keywords": [
    "crypto",
    "arbitrage",
    "flashloan",
    "defi"
  ],
